{
  "name": "leetcode-jizu",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jizu Sun <jizu.sun@sap.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "coveralls": "yarn run coverage && cat ./coverage/lcov.info | coveralls && codecov",
    "coverage": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "debug": "npx --node-arg=--inspect-brk=0.0.0.0:8008 jest --runInBand",
    "commit": "git-cz"
  },
  "dependencies": {
    "lib": "file:./lib/"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "codecov": "^3.6.5",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && yarn commit --hook",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add",
        "jest --bail --findRelatedTests"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
